.contentView {
    display: flex;
    flex-direction: row;
    padding: 20rpx 20rpx 20rpx 0rpx;
    margin-left: 40rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid lightgray;
}

.contentView> image {

    height: 100rpx;
    width: 100rpx;
    margin-right: 20rpx;
}

.contentView .messageContentView {
    flex: auto;
    display: flex;
    flex-direction: column;
}

.contentView .messageContentView>view {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.contentView .messageContentView text {
    line-height: 50rpx;
    font-size: 28rpx;
}

.contentView .messageContentView>text {
    flex: auto;
    color: gray;
}
