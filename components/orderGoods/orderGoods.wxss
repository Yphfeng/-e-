/*产品模块*/

.orderGoodsContainerView {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
  background: white;
}
.orderGoodsContainerView:last-child{
  border-bottom: none;
}
.productView .productImage {
  height: 150rpx;
  width: 150rpx;
}

.productView .productContentView {
  flex: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.productView .productContentView>text {
  font-family: STHeitiSC-Light;
  font-size: 28rpx;
  color: #000;
  line-height: 50rpx;
  word-wrap: break-word;
}

.productView .productContentView view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.productView .productContentView view text {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-family: STHeitiSC-Light;
  font-size: 26rpx;
  color: #000;
  line-height: 40rpx;
}

.productView .productContentView view .productPrice {
  color: #ff3b25;
}
