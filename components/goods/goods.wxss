.goodsContents {
    width: 50%;
    box-sizing: border-box;
    border: 2px solid #efefef;
    display: flex;
    flex-direction: column;
    align-content: flex-start;
    background: white;
}
.goodsContents>text {

    font-family: STHeitiSC-Light;
    font-size: 28rpx;
    color: #000;
    line-height: 60rpx;
    padding-left: 10rpx;
}
.goodsContents image {
    width: 100%;
    height: 370rpx;
}

.goodsContents .goodsDetailView {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.goodsContents .goodsDetailView .moneyText {
    flex: 0 0 40%;
    color: #f35b4a;
}

.goodsContents .goodsDetailView text {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-family: STHeitiSC-Light;
    font-size: 26rpx;
    color: #000;
    line-height: 60rpx;
}
