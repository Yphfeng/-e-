/* pages/channelProvider/rgoodsinfo/rgoodsinfo.wxss */
.info{

}
.head{
  padding: 20rpx;
  font-size: 30rpx;
  height: 48rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
}
.num{
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
}
.num text:nth-child(1){
  margin-right: 20rpx;
}
.button{
  color: white;
  font-size: 30rpx;
  background: #169BD5;
  border-radius: 6rpx;
  width: 300rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
.list{
  padding: 20rpx;
}
.person {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}
.listinfo{
  color: black;
  padding-bottom: 10rpx;
  font-size:24rpx;
  height: 90rpx;
  line-height: 50rpx;
  border-bottom: 1rpx dashed #ccc;
}
.shopname{
  margin-left: 20rpx;
}
.shopname>text{
  width: 30%;
}

.name{
  position: relative;
}
.goodsnum{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.goodsnum text{
  display: inline-block;
}
/* 分页 */
.pagebtn{
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.pagebtn view{
  background: white;
  display: inline-block;
  padding: 5rpx 7rpx;
  font-size: 24rpx;
  border: 1px solid #ccc;
  margin-left: 5rpx;
}
.pagebtn .pagebtnactive{
  background: #9AC5FF;
}
.pagebtnlist{
  width: 28rpx;
  text-align: center;
}
.pagenext{
  margin-right: 20rpx;
}


