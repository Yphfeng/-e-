/* pages/dynamic/dynamic.wxss */

.contentView2 {
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 0rpx 0rpx;
  margin: 0px 0px 49px 0px;
}

.commentsView {
  background-color: #e8e8e8;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10rpx 10rpx 20rpx 20rpx;
  box-sizing: border-box;  
  min-height: 49px;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end; 
  border-top: 1rpx solid #e8e8e8;
}

.commentsView textarea {
  background-color: white;
  border: 1rpx solid #e8e8e8;
  flex: auto;
  border-radius: 15rpx;
  padding: 5rpx;
}

.commentsView image {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 25px;
  height: 25px;
}