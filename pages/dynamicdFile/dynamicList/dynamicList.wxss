.container{
  padding-bottom: 10px;
}
.list-item{
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
}
/* .list-item:last-of-type{
  border: none;
} */
.item-title{
  max-width: 620rpx;
  font-size: 18px;
}
.item-title2{
  max-width: 100%;
  font-size: 18px;
}
.icon-hot{
  width:50rpx;
  height:50rpx;
  margin-left: 15rpx;
}
.item-box{
  font-size: 16px;
  width: 100%;
  position: relative;
  margin-top: 30rpx;
}
.item-image{
  width: 100%;
  height: 340rpx;
}
.item-mask{
  width: 100%;
 height: 340rpx;
  position: absolute;
  left: 0;
  top:0;
  background: rgba(0,0,0,0.1)
}
.icon-play{
  width:150rpx;
  height:120rpx;
  position: absolute;
  left: 50%;
  top:50%;
  margin-left: -75rpx;
  margin-top: -60rpx;
}
.item-footer{
  width: 100%;
  margin-top: 20rpx;
  font-size: 14px;
  color: #888;
}
.color-bule{
  color: blue;
}
.item-time{
  margin-left: 15rpx;
}
.noMore{
  line-height: 4em;
  text-align: center;
  color: #888;
  font-size: 16px;
}