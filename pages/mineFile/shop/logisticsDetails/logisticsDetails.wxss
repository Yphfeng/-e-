/* pages/mineFile/shop/logisticsDetails/logisticsDetails.wxss */
page{
	background: #ddd;
	}
.container{
	margin:0 20rpx;
	background:#fff;
	font-size:28rpx;
	padding: 0 20rpx;
}
.main-title{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	padding-top: 20rpx;
}
.address{
	padding-top: 40rpx;
}
.item{
	display: flex;
	flex-direction: row;
}
.con{
	flex: 2.5;
	display: flex;
	flex-direction: column;
	padding-left: 40rpx;
	border-left: 2rpx solid #ccc;
	padding-bottom: 70rpx;

}
.dateTime{
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
}
.dot{
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	margin-right: -5rpx;
	padding-top:15rpx;

}
.item:first-child .dot{
		z-index: 9;
		background: #fff;
	height: 4px;
}
.dotInit{
	width: 10rpx;
	height: 10rpx;
	background: #ccc;
	border-radius: 100%;
	position: relative;
}