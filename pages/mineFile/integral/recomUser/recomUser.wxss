/* pages/mineFile/integral/recomUser/recomUser.wxss */
view{
  box-sizing: border-box;
}
.mian{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #f0f0f0;
  overflow: auto;
}
.head{
  border-top: 72rpx solid #f0f0f0;
  padding: 0 30rpx 0 30rpx;
  position: relative;
  background: white;
  margin-bottom: 40rpx;
}
.tabchange{
  position: absolute;
  top: -37rpx;
  width: 655rpx;
  border-radius: 40rpx;
  font-size: 27rpx;
}
.nowdatabtn{
  border-radius: 40rpx 0 0 40rpx;
}
.sumdatabtn{
  border-radius: 0 40rpx 40rpx 0;
}
.tabchange>view{
  width: 50%;
  display: inline-block;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: top;
}
.active1{
  background: #2cc5ff;
  color: white;
}
.active2{
  background: white;
  border: 1rpx solid #d8d8d8;
  color: black;
}
.recomnum{
  margin-top: 40rpx;
  padding: 20rpx 0;
  text-align: center;
  
  width: 655rpx;
}
.title{
  font-size: 29rpx;
  color: #717171;
  margin-bottom: 40rpx;
}
.number{
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 70rpx;
}
.datanow{
  border-top: 1rpx solid #cdcdcd;
  text-align: right;
  padding-top: 40rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  padding-bottom:35rpx;
}

/* 列表页 */
.list{
  background: white;
  padding-left: 28rpx;
}
.listinfo{
  display: flex;
}
.listinfo>view{
  display: inline-block;
  vertical-align: top;
}
.list .listinfo:last-child .lr{
  border: none;
}
.ll{
 border: 1rpx solid #ccc;
 width: 100rpx;
 height: 100rpx;
 border-radius:50%; 
 margin: 37rpx 20rpx 30rpx 30rpx;
}
.ll image{
  width: 100%;
  height: 100%;
  border-radius:50%; 
}
.lr{
  border-bottom: 1rpx solid #ccc;
  flex: 1;
  padding: 40rpx 0rpx 40rpx 20rpx;
}
.name{
  font-size: 30rpx;
}
.time{
  font-size: 23rpx;
  color: #454955;
  margin-top: 38rpx;
}