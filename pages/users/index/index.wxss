.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  overflow: hidden;
  position: fixed;
  top: 5%;
  height: 80%;
  overflow-y: scroll;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: 0 40rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 20rpx;
  border-top: 1rpx solid #ccc;
}
.modal-input {
  text-align: left;
  text-indent: 60rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 68rpx;
  font-size: 34rpx;
  line-height: 68rpx;
}

.btn-cancel {
  width: 50%;
  margin: 0 20rpx;
  color: #666;
  text-align: center;
  background: #ccc;
}

.btn-confirm {
  width: 50%;
   margin: 0 20rpx;
  color: #fff;
  background: #ec5300;
  text-align: center;
}
