.keyWord.error{
  border-color: red;
}
.container{
  padding: 0 50rpx;
}
.phone-content{
  padding-bottom: 50rpx;
}
.phone-content input{
  font-size: 32rpx;
  color: #fff;
}
.keyWord{
  border:2rpx solid #fff;
  padding: 12rpx 20rpx;
}
.input-placeholder{
  color:#fff;
}
.sub-button{
  line-height: 60rpx;
  font-size: 30rpx;
}
 
.input .con {    
  border:1px solid #fff; 
  padding: 12rpx 20rpx; 
  color: #fff; 
  font-size: 32rpx;
}  
  
  
.citypickers{  
  position: fixed;  
  height: 100%;  
  width: 100%;  
  min-height: 100%;  
  background-color: #ff0;  
}  
  
  
.citybody {  
  position: fixed;  
  bottom: 0px;  
}  
  
.cityheader {  
  position: absolute;  
  top:0px;  
  width: 100%;  
  z-index: 5;  
}  
  
.city-cancel {  
  float: left;  
  margin: 20rpx;  
  color: #828282;  
}  
  
.city-true {  
  float: right;  
  margin: 20rpx;  
  color: #10FF10;  
}  
  .section .picker {  
  background-color: #fff;  
  border-bottom: 2px #cccccc solid;  
  border-top: 2px #d9d9d9 solid;  
  padding: 20rpx;  
}  