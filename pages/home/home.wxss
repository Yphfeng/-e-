page {
  background-color: #f8f8f8;
}

.topView {
  background-color: #f35b4a;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 332rpx;
  padding: 0rpx 20rpx 0rpx 20rpx;
  border-bottom: 2rpx solid #f35b4a;
}
.item1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.item-left {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  line-height: 50rpx;
}

.item2 {
  margin: 10rpx 0rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.connectBTN {
  font-size: 28rpx;
  margin-right: 0;
  line-height: 60rpx;
  width: 250rpx;
}

.sectionView {
  background-color: white;
  display: flex;
  flex-direction: column;
  border-top: 2rpx solid lightgray;
  border-bottom: 2rpx solid lightgray;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.itemContentView {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.itemContentView .lineView {
  width: 100%;
  padding: 30rpx 20rpx 20rpx 0rpx;
  margin-left: 20rpx;
  font-family: PingFangSC-Light;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid lightgray;
}

.itemContentView .noLineView {
  width: 100%;
  padding: 30rpx 20rpx 20rpx 0rpx;
  margin-left: 20rpx;
  font-family: PingFangSC-Light;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}


.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  overflow: hidden;
  position: fixed;
  top: 5%;
  height: 80%;
  overflow-y: scroll;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: 0 40rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 20rpx;
  border-top: 1rpx solid #ccc;
}
.modal-input {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.modal-input text{
  display: inline-block;
  width: 60%;
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 68rpx;
  font-size: 34rpx;
  line-height: 68rpx;
}

.btn-cancel {
  width: 50%;
  margin: 0 20rpx;
  color: #666;
  text-align: center;
  background: #ccc;
}

.btn-confirm {
  width: 50%;
   margin: 0 20rpx;
  color: #fff;
  background: #ec5300;
  text-align: center;
}
.tabBar{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 28rpx;
  background: #fff;
  padding: 20rpx 0;
  border-top:1rpx solid #ddd;
}
.tabBar .item{
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: space-around;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
 padding:0 43rpx;
}