/* myTreatment.wxss */

.scrollViewContent {
  display: flex;
  flex-direction: column;
  align-content: flex-start;
}

/* Top view*/
.myTreamentTopView {
  padding-left: 34rpx;
}

.topView {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #979797;
  height: 90rpx;
}

.topView>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 14rpx;
}

.topView .title {
  font-family: STHeitiSC-Light;
  font-size: 50rpx;
  color: #000;
  line-height: 80rpx;
  text-align: left;
}

.topView .treatmentNote {
 align-self: flex-end;
  font-family: STHeitiSC-Light;
  font-size: 25rpx;
  color: red;
  line-height: 50rpx;
  text-align: left;
}

.healthManager_helpImage {
  height: 90rpx;
  width: 90rpx;
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
}
.sectionView {
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  padding: 10rpx 20rpx 0;
}

.itemContentView {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  border: 1px solid #ccc;
  margin: 10rpx 0;
  border-radius: 10rpx;
}

.itemContentView .lineView {
  width: 100%;
  padding: 30rpx 20rpx 20rpx 0rpx;
  margin-left: 20rpx;
  font-family: PingFangSC-Light;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.itemContentView:last-child .lineView{
  border: none;
}
.btn-info{
  font-size: 28rpx;
}