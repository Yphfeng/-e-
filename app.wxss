/*主内容样式*/
.containerView {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-content: flex-start;
}

/*主内容滚动视图样式*/
.containerScrollview {
    width: 100%;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
}

/*按钮样式*/
.qbButton {
  background-color: #f35b4a;
  border-radius: 15rpx;
  font-family: STHeitiSC-Light;
  font-size: 34rpx;
  color: white;
}

/*商品视图*/
.commodityView {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.commodityTopView {
  height: 88rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-startl;
  align-items: center;
  padding-left: 27rpx;
  background-color: #efefef;
}

.commodityTopView image {
  width: 36rpx;
  height: 32rpx;
}

.commodityTopView text {
  margin-left: 16rpx;
  font-family: STHeitiSC-Light;
  font-size: 30rpx;
  color: #000;
  line-height: 45rpx;
  text-align: left;
}

/*滚动视图*/
.swiperContainerView {
    width: 100%;
}
.swiperItemImage {
    width: 100%;
    height: 100%;
}


.helpImage {
  width: 25px;
  height: 25px;
}
.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.flex-2 {
  flex: 2;
}

.text-overflow {
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
  white-space: nowrap; /*强制不换行*/
}

.text_3{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  align-content: center;
}

